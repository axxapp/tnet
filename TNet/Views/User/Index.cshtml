@{
    ViewBag.Title = "用户信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Head{
    <link href="~/Css/User/Index.css?v=20161121" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Js/User/Index.js?v=20161121"></script>
    <script type="text/javascript">
        Pub.isUserPage = true;
        var ru = "@ViewBag.ru";
        var tn_u = @ViewBag.u;
        Pub.setUser(tn_u);
    </script>
}
<div class="Jump">正在跳转中...</div>
<div class="InfoHost">
    <div class="InfoBox weui_cells weui_cells_access" id="base">
        <div class="avatarHox">
            <div class="avatar">

            </div>
            <div class="name"></div>
        </div>


        <div class="weui_cell Title_Cells">
            <div class="weui_cell_bd weui_cell_primary">
                <p><a class="update" href="~/User/Update">基本信息:</a></p>
            </div>
            <div class="weui_cell_ft">

            </div>
        </div>

        <div class="Item">电话：<span id="phone">...</span></div>
        <div class="Item">公司：<span id="comp">...</span></div>
        <div class="Item">性别：<span id="sex">...</span></div>
        <div class="Item">注册：<span id="cretime">...</span></div>
        <div class="Item">备注：<span id="notes">...</span></div>
    </div>

    <div class="InfoBox" id="muser">
        <div class="vline"></div>
        <div class="Title">职员信息：</div>
        <div class="Item">姓名：<span id="muname">...</span></div>
        <div class="Item">电话：<span id="muphone">...</span></div>
        <div class="Item">备注：<span id="notes">...</span></div>
        <div class="Item NoBorder">通知 & 权限：</div>
        <div class="weui_cells weui_cells_checkbox">
            <label class="weui_cell weui_check_label" for="recv_order">
                <div class="weui_cell_hd">
                    <input value="coding" class="weui_check" name="hobby" id="recv_order" disabled type="checkbox">
                    <i class="weui_icon_checked"></i>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <p>订单通知</p>
                </div>
            </label>

            <label class="weui_cell weui_check_label" for="recv_review">
                <div class="weui_cell_hd">
                    <input value="fixBug" name="hobby" disabled class="weui_check" id="recv_review" type="checkbox">
                    <i class="weui_icon_checked"></i>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <p>订单审核</p>
                </div>
            </label>
            <label class="weui_cell weui_check_label" for="recv_setup">
                <div class="weui_cell_hd">
                    <input value="fixBug" name="hobby" disabled class="weui_check" id="recv_setup" type="checkbox">
                    <i class="weui_icon_checked"></i>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <p>工单通知</p>
                </div>
            </label>
            <label class="weui_cell weui_check_label" for="send_order">
                <div class="weui_cell_hd">
                    <input value="fixOtherDeBug" disabled name="hobby" class="weui_check" id="send_order" type="checkbox">
                    <i class="weui_icon_checked"></i>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <p>派单</p>
                </div>
            </label>
        </div>


    </div>


</div>