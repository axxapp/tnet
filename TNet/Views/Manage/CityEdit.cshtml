@model TNet.Models.CityViewModel
@using TNet.Models
@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    ViewBag.Title = "编辑城市";
    if (string.IsNullOrEmpty(Model.idcity))
    {
        ViewBag.Title = "新增城市";
    }
}

<div class="ManageRightTitle">
    <ol class="breadcrumb">
        <li><a href="#">城市管理</a></li>
        <li><a href="@Url.Action("CityList","Manage")">城市列表</a></li>
        <li><a href="#" class="active">@(string.IsNullOrEmpty(Model.idcity) ? "新增城市" : "编辑城市")</a></li>
    </ol>
</div>
<div class="ManageRightContent">
    <form id="form1" action="@Url.Action("CityEdit","Manage")" method="post" class="form-horizontal">
        <div class="merc-edit-box ">
            <fieldset>
                @Html.HiddenFor(model => model.idcity)
                <div class="form-group">
                    @Html.LabelFor(model => model.city1, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.city1, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.city1)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.code, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.code, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.code)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.sortno, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.sortno, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.sortno)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.inuse, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.CheckBoxFor(model => model.inuse, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.inuse)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.notes, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.notes, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.notes)
                </div>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="col-sm-2">

                    </div>
                    <div class="col-sm-10" style="padding-left:10px;padding-top:10px;">
                        <input type="submit" id="btnSave" value="保存" class="btn btn-primary" />
                    </div>
                </div>
            </fieldset>

        </div>

    </form>

</div>

<script type="text/javascript">

    $(function () {
        $("#@Html.IdFor(model=>model.inuse)").bootstrapSwitch({
            onText: '启用',
            offText: '禁用'
        });
    });

</script>
