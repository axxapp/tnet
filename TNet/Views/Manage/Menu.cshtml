        </div>
        <div id="hasSub">
            <div class="item">
                类型：<select id="menuType" onchange="setMenuType(this.value)">
                    <option value="text">文本</option>
                    <option value="news">新闻</option>
                    <option value="view">网页</option>
                    <option value="click">点击</option>
                </select>
            </div>
            <div class="item" id="res_1">
                关键字：<input type="text" id="menuMediaId" />
            </div>
            <div class="item" id="res_2" style="display:none">
                <span class="menu_url_title">网址：</span> <input type="text" id="menuUrl" class="menu_url" value="" onchange="updateMenuData(this,2,'url')" />
            </div>
        </div>
