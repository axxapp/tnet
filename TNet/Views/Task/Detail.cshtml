@{
    ViewBag.Title = "工单明细";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <link href="~/Css/Task/Base.css?v=20161124" rel="stylesheet" type="text/css" />
    <link href="~/Css/Task/Comm.css?v=20161124" rel="stylesheet" type="text/css" />
    <link href="~/Css/Task/Detail.css?v=20161124" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Js/Task/Base.js?v=20161124"></script>
    <script type="text/javascript" src="~/Js/Task/Comm.js?v=20161124"></script>
    <script type="text/javascript" src="~/Js/Task/Detail.js?v=20161124"></script>

}
<div id="task_host" class="task_host">
    <div class="order_item">

        <div class="order">

            <div class="no">工单：<span id="idtask"></span></div>
            <div class="task_status">
                <div class="gstatus"></div>
                <div class="rstatus"></div>
            </div>

        </div>



        <div class="titem_host">

            <div class="ttitle">客户:</div>
            <div class="tvalue"><span id="contact"></span></div>

        </div>


        <div class="titem_host">

            <div class="ttitle">电话:</div>
            <div class="tvalue"><span id="phone"></span> </div>

        </div>


        <div class="titem_host">

            <div class="ttitle">地址:</div>
            <div class="tvalue"><span id="addr"></span> </div>

        </div>

        <div class="titem_host">

            <div class="ttitle">任务:</div>
            <div class="tvalue"><span id="task"></span></div>

        </div>

        <div class="taskimg">

        </div>
        <div class="taskPress" id="taskPress">


        </div>

    </div>
    <div class="mercHosr">
        <div class="vline"></div>
        <div class="title">商品信息：</div>
        <a href="#" id="merc" class="merc">
            <div class="merc_l">
                <img id="ico" />
            </div>
            <div class="merc_c">

                <span id="merc_title">商品...</span>
                <span id="merc_spec">规格...</span>
            </div>
            <div class="merc_r">

                <span id="merc_price">￥0</span>
                <span id="merc_count">x0</span>
            </div>
        </a>
    </div>
    <div class="vline"></div>
    <div class="title">处理记录:</div>
    <div class="taskDoPress"></div>
    @*<div class="vline"></div>
        <div class="title">工人信息:</div>
        <div class="worker"></div>*@
    <div class="task_ops">
        <div class="buy_r ops" id="ops"></div>
    </div>

    <div class="reviewOrderHost" onclick="showEchtTaskHost()">

    </div>
    <div class="reviewOrderBox_Host" onclick="showEchtTaskHost()">
        <div class="reviewOrderBox">
            <div class="reviewOrderTitle">回访</div>
            <div class="reviewOrderContent">
                <textarea id="reviewOrderCValue" maxlength="200" placeholder="输入您回访意见吧..." onclick="{ event.cancelBubble = true; }"></textarea>
            </div>
            <div class="reviewOrderOps">
                <a class="reviewOrder_Ok" href="javascript:void(0)" onclick="echoTask(event)">提交</a><a class="reviewOrder_Fail" href="javascript:void(0)">取消</a>
            </div>
        </div>
    </div>
</div>
