
@{
    ViewBag.Title = "编辑订单";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Head{
    <link href="@Url.Content("~/Css/Order/Base.css?v=20161113")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Css/Order/Edit.css?v=20161113")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="@Url.Content("~/Js/Order/Base.js?v=20161113")">

    </script>

    <script type="text/javascript" src="@Url.Content("~/Js/Order/UpdateBase.js?v=20161113")">

    </script>
    <script type="text/javascript" src="@Url.Content("~/Js/Order/Edit.js?v=20161113")">

    </script>

}


<div id="OC" class="OC">
    <div class='setup_tag'></div>
    @*<div class="title">订单信息：</div>*@
    <div class="order">
        <div class="no" id="orderno">订单...</div>
        <div class="status" id="status">状态...</div>
    </div>
    <div class="review_msg_host">
        <div class="vline"></div>
        <div class="title">审核意见：</div>
        <div class="review_msg">
        </div>
    </div>
    <div class="vline"></div>
    <div class="title">地址信息：</div>
    <div class="addr">
        <a href="javascript:void(0)" id="addr" onclick="selectAddr()">
            <i class="iconfont">&#xe615</i>
            <div class="addrInfo">
                <div class="npHost">
                    <span class="contacts" id="contacts">联系人...</span>
                    <span class="phones" id="phones">电话....</span>
                </div>
                <div class="realAddr" id="realAddr">地址...</div>
            </div>
            <span class="choice"></span>
        </a>
    </div>

    <div class="vline"></div>
    <div class="title">商品信息：</div>
    <a href="#" id="merc" class="merc">
        <div class="merc_l">
            <img id="ico" />
        </div>
        <div class="merc_c">

            <span id="merc_title">商品...</span>
            <span id="merc_spec">规格...</span>
        </div>
        <div class="merc_r">

            <span id="merc_price">￥0</span>
            <span id="merc_count">x0</span>
        </div>
    </a>
    <div class="merc_st_et">期间：<span id="merc_st_et"></span></div>

    <div class="resource">
        <div class="vline"></div>
        <div class="title">身份证号码：</div>
        <div class="idc_num">
            <div class="edit">
                <input type="text" id="idc" placeholder="身份证号..." maxlength="18" />
            </div>
        </div>
        <div class="vline"></div>

        <div class="title">身份证照片：</div>
        <div>
            <a href="javascript:void(0)">
                <img id="idc_img1" src="@Url.Content("~/Images/default_bg.png")" />
                <input type="file" value="" accept="image/*" onchange="__FileSelectImg('idc_img1', this)">
                <span>正面</span>
            </a>
            <a href="javascript:void(0)">
                <img id="idc_img2" src="@Url.Content("~/Images/default_bg.png")" />
                <input type="file" value="" accept="image/*" onchange="__FileSelectImg('idc_img2', this)">
                <span>反面</span>
            </a>
            <a href="javascript:void(0)">
                <img id="idc_img3" src="@Url.Content("~/Images/default_bg.png")" />
                <input type="file" value="" accept="image/*" onchange="__FileSelectImg('idc_img3', this)">
                <span>手持身份证(正面)</span>
            </a>
        </div>

    </div>
    <div class="vline"></div>
    <div class="title">处理进度：</div>
    <div class="Presses" id="Presses"></div>
    <div class="vline"></div>
    <div class="title">留言信息：</div>
    <div class="notes">
        <div class="comm" id="comm">
            <input type="text" id="notes"  placeholder="买家的留言..." maxlength="15" />
        </div>
    </div>


    <div class="buyhost">
        <div class="buy">
            <div class="buy_l">

                <a href="javascript:void(0)" class="buy_att_month" id="attmonth">送: 0  月</a>
                <a href="javascript:void(0)" id="buy_amount" class="buy_amount">金额:<span class="amount" id="amount">￥ 0.00</span></a>
            </div>

            <div class="buy_r ops" id="ops">
                <a class="pay" href="javascript:void(0)" onclick="saveOrder()">保存</a>
            </div>
        </div>
    </div>
</div>


<div id="Addr_Host" class="Addr_Host">

    @Html.Partial("~/Views/Addr/Addr.cshtml")


</div>